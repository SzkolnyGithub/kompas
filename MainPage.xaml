<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="zadanie22._02._24Badowski4c.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <GraphicsView 
                x:Name="canvasView"
                WidthRequest="400"
                HeightRequest="400"/>

            <Button
                x:Name="p1"
                Text="Click me"
                Clicked="klik"
                HorizontalOptions="Center" />
            <Entry 
                x:Name="coordinates"
                Placeholder="Wprowadź współrzędne: "/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
